@page
@model IdentityNET.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:40px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row" style="padding:10px;">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username" style="margin-left:150px;"></span>
        </div>

        <div class="form-group row" style="padding:10px;">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password" style="margin-left:150px;"></span>
        </div>

        <div class="form-group row">
            <div class="col-2" style="margin-left:10px;">
                <input type="submit" class="btn btn-primary" value="Login" style="margin-top:20px; width:100px; " />
            </div>

        </div>

    </form>
</div>